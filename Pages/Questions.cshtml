@page
@model RevisionWebV2.Pages.QuestionsModel
@{
}

@foreach (var q in Model.sub.Questions)
{
    <p>
        <a href="/answers?qid=@q.Id">@q.Title</a>
    </p>
}


@if (Model.isOwnUserSubject == true)
{
    <form method="post">
        <input type="hidden" value="@Model.sid" />
        <input type="text" name="title">
        <input type="submit" class="AddElementButton" value="Ajouter question">
    </form>
}

else
{
    <p>You are not the owner of this subject. You've got no rights but looking at it.</p>
}