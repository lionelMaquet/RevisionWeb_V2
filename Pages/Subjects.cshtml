@page
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model RevisionWebV2.Pages.SubjectsModel
@{
    ViewData["Title"] = "Home page";
}

<div class="center">

    <h2>Choose a subject : </h2>


    @if (!SignInManager.IsSignedIn(User))
    {
        <p>Hello, welcome to ReVision ! </p>
        <p>You are currently not logged in.</p>
        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
    }

    else
    {

        <div class="list_container subjects_container">
            @foreach (var m in Model.subjects)
            {
                <div class="subject_item">
                    <div class="subject_item_first_row">
                        <h3>@m.Title</h3>
                        <div>
                            <a href="/questions?sid=@m.Id">
                                <!--<img src="~/assets/loupe.png" class="search-base" />-->
                                <img src="~/assets/loupe-hover.png" class="search-hover" />
                            </a>
                            <a>
                                <!--<img src="~/assets/play-button.png" class="play-base" />-->
                                <img src="~/assets/play-button-hover.png" class="play-hover" />
                            </a>
                        </div>
                    </div>

                </div>
            }
        </div>

        @if (Model.isOwnSubjectOwner)
        {
            <form class="add_element_form" method="post">
                <input type="text" name="title">
                <input type="submit" class="AddElementButton" value="Ajouter sujet">
            </form>
        }

    }
</div>
